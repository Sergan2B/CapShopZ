<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginHorizontal="30dp"
    >

    <ImageView
        android:layout_gravity="top|center_horizontal"
        android:id="@+id/logo_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo"
        tools:ignore="ContentDescription" />


    <TextView
        android:id="@+id/login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Восстановить пароль"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/newPass_et"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_baseline_password"
        android:textSize="16sp"
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:hint="Введите новый пароль"
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/verifyPass_et"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_baseline_password"
        android:textSize="16sp"
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:hint="Подтвердите новый пароль"
        tools:ignore="Autofill" />




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.button.MaterialButton
            android:layout_marginBottom="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_gravity="center_horizontal"
            android:id="@+id/restore_btn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textColorHint="@color/white"
            android:backgroundTint="@color/mainYellow"
            app:cornerRadius="60dp"
            android:hint="Восстановить пароль"
            android:textSize="16sp" />


    </androidx.constraintlayout.widget.ConstraintLayout>





</LinearLayout>