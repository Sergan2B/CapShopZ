<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >

    <androidx.cardview.widget.CardView
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="5dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/mainGray"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:elevation="10dp"
       >

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/cap_pic"
            android:id="@+id/imageCap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/brandName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adidas"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />


    </LinearLayout>


    <TextView
        android:id="@+id/description"
        android:layout_marginStart="10dp"
        android:textSize="12dp"
        android:text="San Francisco Baseball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/saleCost"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:textSize="15dp"
            android:text="4600 сом"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/cost_tv"
            android:textColor="#FDDB16"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:textSize="15dp"
            android:text="3800 сом"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </LinearLayout>









</LinearLayout>